<?xml version="1.0" encoding="utf-8"?>  
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"  
    android:orientation="vertical"  
    android:layout_width="match_parent"  
    android:layout_height="match_parent"
    android:background="#ff000000">  
    <EditText  
        android:inputType="text"
        android:hint="@string/name_hint"  
        android:layout_width="match_parent"  
        android:layout_height="wrap_content"  
        android:textColorHint="@android:color/darker_gray"
        android:textColor="@android:color/darker_gray"
        android:backgroundTint="@android:color/darker_gray"
        android:id="@+id/edtName"/>  
    <EditText  
        android:inputType="number"
        android:hint="@string/min_level_hint"  
        android:layout_width="match_parent"  
        android:layout_height="wrap_content" 
        android:textColorHint="@android:color/darker_gray"
        android:backgroundTint="@android:color/darker_gray"
        android:textColor="@android:color/darker_gray"
        android:id="@+id/edtMinLevel" />  
    <EditText  
        android:inputType="number"
        android:hint="@string/max_level_hint"  
        android:layout_width="match_parent"  
        android:layout_height="wrap_content" 
        android:textColorHint="@android:color/darker_gray"
        android:backgroundTint="@android:color/darker_gray"
        android:textColor="@android:color/darker_gray"
        android:id="@+id/edtMaxLevel" />  
    <EditText  
        android:inputType="number"
        android:hint="@string/encounter_rate_hint"  
        android:layout_width="match_parent"  
        android:layout_height="wrap_content"  
        android:textColorHint="@android:color/darker_gray"
        android:backgroundTint="@android:color/darker_gray"
        android:textColor="@android:color/darker_gray"
        android:id="@+id/edtEncounterRate"/>
    <EditText  
        android:inputType="text"
        android:hint="@string/route_hint"  
        android:layout_width="match_parent"  
        android:layout_height="wrap_content"
        android:textColorHint="@android:color/darker_gray"
        android:backgroundTint="@android:color/darker_gray"
        android:textColor="@android:color/darker_gray"
        android:id="@+id/edtRoute"/>  
    <EditText  
        android:inputType="text"
        android:hint="@string/location_hint"  
        android:layout_width="match_parent"  
        android:layout_height="wrap_content"  
        android:textColorHint="@android:color/darker_gray"
        android:backgroundTint="@android:color/darker_gray"
        android:textColor="@android:color/darker_gray"
        android:id="@+id/edtLocation"/> 
    <LinearLayout  
        android:layout_width="match_parent"  
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/darker_gray"
        android:orientation="horizontal">  
        <Button  
            android:id="@+id/btnAdd"  
            android:layout_width="wrap_content"  
            android:layout_height="match_parent" 
            android:background="@android:color/holo_blue_dark"
            android:textColor="@android:color/white"
            android:textSize="12dp"
            android:text="@string/add_button_text"  
            android:layout_weight="1"/>  
        <Button  
            android:id="@+id/btnEdit"  
            android:layout_width="wrap_content"  
            android:layout_height="match_parent" 
            android:textSize="12dp"
            android:background="@android:color/holo_blue_dark"
            android:textColor="@android:color/white"
            android:text="@string/update_button_text"  
            android:layout_weight="1"/>  
        <Button  
            android:id="@+id/btnRemove"  
            android:layout_width="wrap_content"  
            android:layout_height="match_parent"
            android:textSize="12dp"
            android:background="@android:color/holo_blue_dark"
            android:textColor="@android:color/white"
            android:text="@string/remove_button_text"  
            android:layout_weight="1"/>  
        <Button  
            android:id="@+id/btnMenu"  
            android:layout_width="wrap_content"  
            android:layout_height="match_parent"
            android:textSize="12dp"
            android:background="@android:color/holo_blue_dark"
            android:textColor="@android:color/white"
            android:text="@string/menu_button_text"  
            android:layout_weight="1"/>  
    </LinearLayout>  
    <ListView  
        android:minWidth="25px"  
        android:minHeight="25px"  
        android:layout_width="match_parent"  
        android:layout_height="match_parent"  
        android:textColor="@android:color/darker_gray"
        android:id="@+id/listView"/>  
</LinearLayout> 