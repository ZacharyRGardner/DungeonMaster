<?xml version="1.0" encoding="utf-8"?>  
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"  
    android:orientation="vertical"  
    android:layout_width="match_parent"  
    android:layout_height="match_parent"
    android:background="#ff000000">  
    <TextView  
        android:text="@string/pokemon_name"  
        android:textAppearance="?android:attr/textAppearanceLarge"  
        android:layout_width="match_parent"  
        android:layout_height="wrap_content" 
        android:textColor="@android:color/darker_gray"
        android:id="@+id/txtView_Name" />  
    <TextView  
        android:text="@string/min_level"  
        android:textAppearance="?android:attr/textAppearanceMedium"  
        android:layout_width="match_parent"  
        android:layout_height="wrap_content"  
        android:textColor="@android:color/darker_gray"
        android:id="@+id/txtView_Min_Level" />  
    <TextView  
        android:text="@string/max_level"  
        android:textAppearance="?android:attr/textAppearanceMedium"  
        android:layout_width="match_parent"  
        android:layout_height="wrap_content" 
        android:textColor="@android:color/darker_gray"
        android:id="@+id/txtView_Max_Level" />  
    <TextView  
        android:text="@string/encounter_rate"  
        android:textAppearance="?android:attr/textAppearanceMedium"  
        android:layout_width="match_parent"  
        android:layout_height="wrap_content"  
        android:textColor="@android:color/darker_gray"
        android:id="@+id/txtView_Encounter_Rate" /> 
    <TextView  
        android:text="@string/route_name"  
        android:textAppearance="?android:attr/textAppearanceMedium"  
        android:layout_width="match_parent"  
        android:layout_height="wrap_content" 
        android:textColor="@android:color/darker_gray"
        android:id="@+id/txtView_Route" /> 
    <TextView  
        android:text="@string/location_name"  
        android:textAppearance="?android:attr/textAppearanceMedium"  
        android:layout_width="match_parent"  
        android:layout_height="wrap_content" 
        android:textColor="@android:color/darker_gray"
        android:id="@+id/txtView_Location" /> 
</LinearLayout>  